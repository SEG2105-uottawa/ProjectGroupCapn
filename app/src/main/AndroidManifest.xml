<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TutronApp"
        tools:targetApi="31">
        <activity
            android:name=".TutorEngagementsActivity"
            android:exported="false" />
        <activity
            android:name=".TopicInformationActivity"
            android:exported="false" />
        <activity
            android:name=".SearchLessonsActivity"
            android:exported="false" />
        <activity
            android:name=".TutorHomepageActivity"
            android:exported="false" />
        <activity
            android:name=".TutorTopicsActivity"
            android:exported="false" />
        <activity
            android:name=".StudentHomepageActivity"
            android:exported="false" />
        <activity
            android:name=".ManageComplaintsActivity"
            android:exported="false" />
        <activity
            android:name=".StudentInfoActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.STUDENT_INFO" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TutorInfoActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.TUTOR_INFO" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WelcomeActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="Login" />
        <activity
            android:name=".SignupActivity"
            android:exported="true"
            android:label="Signup" />
    </application>

</manifest>