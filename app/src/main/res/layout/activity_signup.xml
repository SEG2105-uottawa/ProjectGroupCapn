<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">


    <Button
        android:id="@+id/btnLoginLoginPage"
        android:layout_width="127dp"
        android:layout_height="47dp"
        android:text="SignUp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.271" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="210dp"
        android:layout_height="170dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <EditText
            android:id="@+id/emailAddress"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:hint="Email Address"
            android:inputType="text" />

        <EditText
            android:id="@+id/password"
            android:layout_width="210dp"
            android:layout_height="42dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:hint="Set your Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/verifyPassword"
            android:layout_width="210dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="Verify your Password"
            android:inputType="textPassword" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/signUpPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:layout_marginTop="0dp"
                    android:text="@string/sign_up_role_picker"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    tools:text="@string/sign_up_role_picker" />

                <Spinner
                    android:id="@+id/rolePicker"
                    android:layout_width="129dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="0dp"
                    android:entries="@array/roles" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="217dp"
        android:layout_height="155dp"
        android:layout_marginTop="117dp"
        android:layout_marginBottom="31dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="54dp"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/logo"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="210dp"
        android:layout_height="31dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:text="SignUp"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="SignUp" />

        <Space
            android:layout_width="105dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="212dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <EditText
            android:id="@+id/firstName"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="FirstName"
            android:inputType="text" />

        <EditText
            android:id="@+id/lastName"
            android:layout_width="101dp"
            android:layout_height="52dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="LastName"
            android:inputType="text" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>